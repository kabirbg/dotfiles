# configuration for skhd, simple hotkey daemon for macOS


#########
# RULES #
#########

# shortcuts to open apps
ctrl - return : kitty
ctrl + alt - return : open -a Firefox
ctrl + shift - return : open -a Brave
ctrl - e : emacs
ctrl - t : open -a Thunderbird
ctrl - b : open -a Blender
ctrl - 0x2B : open -a 'System Preferences'

# screencapture
0x69: screencapture -ixu default
shift - 0x69: screencapture -cix

# make skhd reload its configuration files:
ctrl - escape : skhd --reload

# restart yabai and spacebar:
ctrl + shift - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.spacebar" "gui/${UID}/homebrew.mxcl.yabai"

# sleep:
cmd + shift - escape: pmset sleepnow

###########
# WINDOWS #
###########

# swap/warp windows
shift + cmd - h : yabai -m window --swap west
shift + cmd - j : yabai -m window --swap south
shift + cmd - k : yabai -m window --swap north
shift + cmd - l : yabai -m window --swap east

# increase window size
ctrl - h : yabai -m window --resize left:-20:0
ctrl - j : yabai -m window --resize bottom:0:20
ctrl - k : yabai -m window --resize top:0:-20
ctrl - l : yabai -m window --resize right:20:0

# decrease window size
shift + ctrl - h : yabai -m window --resize right:-20:0
shift + ctrl - j : yabai -m window --resize top:0:20
shift + ctrl - k : yabai -m window --resize bottom:0:-20
shift + ctrl - l : yabai -m window --resize left:20:0

# float / unfloat window and center on screen
shift + ctrl - space : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# balance size of windows
shift + ctrl - 0 : yabai -m space --balance


##########
# SPACES #
##########

# create desktop and follow focus
alt + ctrl - n : yabai -m space --create && \
                 index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
                 yabai -m space --focus "${index}"

# create desktop, move window and follow focus
shift + ctrl - n : yabai -m space --create && \
                   index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
                   yabai -m window --space "${index}" && \
                   yabai -m space --focus "${index}"

# destroy desktop
fn+ ctrl - w : yabai -m space --destroy && \
           yabai -m space --focus recent

# fast focus desktop
ctrl - down : yabai -m space --focus recent
ctrl - left : yabai -m space --focus prev
ctrl - right : yabai -m space --focus next
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl - 9 : yabai -m space --focus 9
ctrl - 0 : yabai -m space --focus 10

# send window to desktop
shift + ctrl - x : yabai -m window --space recent
shift + ctrl - z : yabai -m window --space prev
shift + ctrl - c : yabai -m window --space next
shift + ctrl - 1 : yabai -m window --space  1
shift + ctrl - 2 : yabai -m window --space  2
shift + ctrl - 3 : yabai -m window --space  3
shift + ctrl - 4 : yabai -m window --space  4
shift + ctrl - 5 : yabai -m window --space  5
shift + ctrl - 6 : yabai -m window --space  6
shift + ctrl - 7 : yabai -m window --space  7
shift + ctrl - 8 : yabai -m window --space  8
shift + ctrl - 9 : yabai -m window --space  9
shift + ctrl - 0 : yabai -m window --space 10
